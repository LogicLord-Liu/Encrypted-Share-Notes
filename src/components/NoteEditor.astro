---
// src/components/NoteEditor.astro
---

<main
  class="flex-grow flex flex-col lg:flex-row p-6 space-y-6 lg:space-y-0 lg:space-x-6"
>
  <div class="flex-grow bg-white rounded-lg shadow-md overflow-hidden">
    <textarea
      id="note-content"
      placeholder="在此输入您的笔记..."
      class="w-full h-full p-6 text-lg font-mono
          bg-white dark:bg-gray-900 placeholder-opacity-50
          text-gray-900 dark:text-gray-100
          border border-gray-300 dark:border-gray-700
          rounded-2xl font-bold relative
          shadow-sm focus:shadow-lg focus:border-blue-500
          outline-none resize-none transition-all duration-200
          scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-transparent
          sm:text-base md:text-lg lg:text-xl"
    ></textarea>
    <div
      id="character-count"
      class="absolute bottom-4 right-4 text-sm text-gray-500 font-medium"
    >
      0 字符
    </div>
  </div>

  <aside
    class="w-full lg:w-96 bg-white rounded-lg shadow-md p-6 flex flex-col space-y-6"
  >
    <!-- 密码输入区域 -->
    <div>
      <label
        for="note-password"
        class="block text-sm font-semibold text-gray-700 mb-2">笔记密码</label
      >
      <div class="relative flex items-center">
        <input
          type="password"
          id="note-password"
          placeholder="密码..."
          class="flex-grow border border-gray-300 rounded-md py-2 px-3 text-gray-700 font-bold focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
        <button
          id="toggle-password"
          class="absolute right-10 p-1 text-gray-500 hover:text-gray-700 focus:outline-none"
        >
          <!-- 眼睛图标 -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 hidden"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            id="eye-open"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
            ></path>
          </svg>

          <!-- 眼睛关 -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            id="eye-closed"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477 0-8.268-2.943-9.542-7a9.956 9.956 0 012.233-3.291m2.158-1.965a3 3 0 114.243 4.243"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 3l18 18"
            ></path>
          </svg>
        </button>
        <button
          id="generate-password"
          class="absolute right-2 p-1 text-gray-500 hover:text-gray-700 focus:outline-none"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 4v5h.582M20 20v-5h-.581M5.82 9a7 7 0 0112.36-2.02M18.18 15a7 7 0 01-12.36 2.02"
            ></path>
          </svg>
        </button>
      </div>

      <p id="password-strength-text" class="mt-2 text-sm text-gray-500"></p>
      <div
        id="password-strength-bar"
        class="h-1 w-full bg-gray-200 rounded overflow-hidden"
      >
        <div
          id="password-strength-fill"
          class="h-full transition-all duration-300"
        >
        </div>
      </div>
    </div>

    <!-- 过期选项 -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2"
        >过期延迟</label
      >
      <div
        id="expiration-options"
        class="grid grid-cols-2 sm:grid-cols-4 gap-2"
      >
        <button
          data-value="1hour"
          class="py-2 px-4 rounded-md text-sm font-medium transition-colors bg-sky-500/60 text-white"
          >1 小时</button
        >
        <button
          data-value="1day"
          class="py-2 px-4 rounded-md text-sm font-medium transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200"
          >1 天</button
        >
        <button
          data-value="1week"
          class="py-2 px-4 rounded-md text-sm font-medium transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200"
          >1 周</button
        >
        <button
          data-value="1month"
          class="py-2 px-4 rounded-md text-sm font-medium transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200"
          >1 月</button
        >
      </div>
    </div>

    <!-- 阅后即焚 -->
    <div class="flex items-center justify-between">
      <span class="text-sm font-semibold text-gray-700">阅后即焚</span>
      <label class="relative inline-flex items-center cursor-pointer">
        <input type="checkbox" id="delete-after-reading" class="sr-only peer" />
        <div
          class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:border-gray-300 after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"
        >
        </div>
      </label>
    </div>

    <!-- 附加文件 -->
    <div>
      <button
        id="upload-btn"
        class="w-full py-2.5 px-4 border border-gray-300 rounded-md text-gray-700 flex items-center justify-center space-x-2 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-300 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a2 2 0 002 2h12a2 2 0 002-2v-1M16 10l-4-4m0 0L8 10m4-4v12"
          ></path>
        </svg>

        <span>附加文件</span>
      </button>

      <input type="file" id="file-input" class="hidden" multiple />

      <div
        id="upload-area"
        class="mt-4 hidden border-2 border-dashed border-gray-300 p-4 rounded-md text-gray-600"
      >
        <p class="mb-2 font-medium">已选择文件：</p>
        <ul id="file-list" class="list-disc pl-5 text-sm text-gray-800"></ul>
        <div
          id="error-message"
          class="mt-2 hidden text-red-600 text-sm flex items-center space-x-2"
        >
          <svg
            class="w-4 h-4 text-red-600"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm2.12-10.12a1 1 0 00-1.41 0L10 8.59 9.29 7.88a1 1 0 10-1.41 1.41L8.59 10l-.71.71a1 1 0 101.41 1.41L10 11.41l.71.71a1 1 0 001.41-1.41L11.41 10l.71-.71a1 1 0 000-1.41z"
              clip-rule="evenodd"></path>
          </svg>
          <span id="error-text"></span>
        </div>
      </div>
    </div>

    <!-- 创建按钮 -->
    <div class="mt-auto pt-6">
      <button
        id="create-note-button"
        class="w-full py-3.5 bg-sky-500/60 text-white rounded-full text-lg font-semibold hover:bg-sky-500/80 focus:outline-none focus:ring-2 focus:bg-sky-500/100 focus:ring-opacity-50 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
      >
        创建笔记
      </button>
    </div>
  </aside>
</main>

<div
  id="success-modal"
  class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4 z-50 hidden transition-opacity duration-300"
>
  <div
    id="success-modal-content"
    class="bg-white dark:bg-gray-900 rounded-2xl shadow-2xl p-8 w-full max-w-md transform transition-transform duration-300 scale-95 opacity-0"
  >
    <!-- 标题 -->
    <h2
      class="text-2xl font-bold text-center text-gray-800 dark:text-white mb-3"
    >
      ✅ 创建成功！
    </h2>
    <p class="text-center text-gray-600 dark:text-gray-300 mb-6 text-base">
      您的加密笔记已准备就绪，可分享链接或二维码。
    </p>

    <!-- 链接部分 -->
    <div class="mb-6">
      <label
        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
      >
        🔗 加密链接
      </label>
      <div class="relative">
        <input
          type="text"
          id="encrypted-link-display"
          readonly
          class="w-full p-3 pr-12 bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 text-gray-800 dark:text-white rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
        <button
          id="copy-link-button"
          title="复制链接"
          class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 dark:text-gray-300 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300 rounded-full p-1"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m-4 5h-4l-1 95"
            ></path>
          </svg>
        </button>
      </div>
      <p
        id="copy-feedback"
        class="text-xs text-green-500 mt-1 hidden text-right"
      >
        已复制！
      </p>
    </div>

    <!-- 二维码部分 -->
    <div class="mb-6">
      <label
        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
      >
        📷 分享二维码
      </label>
      <div
        class="flex justify-center p-2 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800"
      >
        <canvas id="qrcode-canvas" class="w-32 h-32"></canvas>
      </div>
    </div>

    <!-- 操作按钮 -->
    <div class="flex justify-end">
      <button
        id="close-modal-button"
        class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-full text-sm font-semibold focus:outline-none focus:ring-2 focus:ring-blue-400 transition"
      >
        关闭
      </button>
    </div>
  </div>
</div>

<script>
  if (typeof window !== "undefined") {
    const noteContentInput = document.getElementById("note-content");
    const characterCountElement = document.getElementById("character-count");

    if (noteContentInput && characterCountElement) {
      // 更新计数器的函数
      const updateCharacterCount = () => {
        const count = noteContentInput.value.length;
        characterCountElement.textContent = `${count} 字符`;
      }; // 初始加载时执行一次

      updateCharacterCount(); // 监听输入事件

      noteContentInput.addEventListener("input", updateCharacterCount);
    }
  }
</script>
